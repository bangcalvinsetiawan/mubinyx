# Production Environment Variables untuk Hostinger

# API Configuration
NEXT_PUBLIC_API_URL=https://yourdomain.com/api

# Database (ganti dengan kredensial database Hostinger)
DATABASE_URL="mysql://username:password@localhost:3306/database_name"

# JWT Secret (ganti dengan secret yang aman)
JWT_SECRET="your-super-secure-jwt-secret-min-32-characters"

# Server Configuration
NODE_ENV=production
PORT=3010

# File Upload (sesuaikan dengan path Hostinger)
UPLOAD_PATH="/home/username/public_html/uploads"

# CORS Origins (ganti dengan domain yang sebenarnya)
CORS_ORIGINS="https://yourdomain.com,https://www.yourdomain.com"

# Database Pool Settings (untuk optimasi)
DB_POOL_MIN=2
DB_POOL_MAX=10

# Session Settings
SESSION_SECRET="your-session-secret"
SESSION_TIMEOUT=3600000

# Email Configuration (jika menggunakan email features)
SMTP_HOST="smtp.hostinger.com"
SMTP_PORT=587
SMTP_USER="noreply@yourdomain.com"
SMTP_PASS="your-email-password"

# Analytics (opsional)
GOOGLE_ANALYTICS_ID=""

# Security
BCRYPT_ROUNDS=12
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX=100
